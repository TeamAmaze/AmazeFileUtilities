        element string {
            attribute name { xsd:NCName },
            attribute translatable { xsd:boolean }?,
            (
            ( xsd:string { minLength = "1" } )
            | element html {
                   element body {
                       (text
                        | element a {
                              attribute href { xsd:anyURI },
                              attribute target { xsd:NCName },
                              xsd:NCName
                          }
                        | element b { text }
                        | element font {
                              attribute color { text },
                              (text
                               | element i { text })+
                          })+
                   }
               })+
        }+
    }


