<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/eight_dp"
    >
    <ImageView
        android:id="@+id/launcher_icon"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/minimal_icon_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/material_generic"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/team_amaze"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/six_dp"
        android:text="@string/team_amaze"
        android:textSize="@dimen/eighteen_sp"
        android:textColor="@color/grey_color"
        app:layout_goneMarginTop="@dimen/eight_dp"
        app:layout_constraintTop_toBottomOf="@id/launcher_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/rights_reserved"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/six_dp"
        android:text="@string/rights_reserved"
        android:textSize="@dimen/twelve_sp"
        android:textColor="@color/white"
        app:layout_goneMarginTop="@dimen/eight_dp"
        app:layout_constraintTop_toBottomOf="@id/team_amaze"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/open_source"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rights_reserved"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/material_generic_medium"
        android:textSize="@dimen/eighteen_sp"
        android:textColor="@color/blue"
        android:text="@string/licenses"
        />
    <TextView
        android:id="@+id/privacy_policy"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/open_source"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/material_generic"
        android:textSize="@dimen/eighteen_sp"
        android:textColor="@color/blue"
        android:text="@string/privacy_policy"
        />
    <TextView
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/privacy_policy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/red"
        android:layout_marginTop="@dimen/material_generic"
        android:textSize="@dimen/twelve_sp"
        android:text="@string/pre_production"
        />
</androidx.constraintlayout.widget.ConstraintLayout>