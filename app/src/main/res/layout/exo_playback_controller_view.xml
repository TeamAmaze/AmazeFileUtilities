<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    tools:targetApi="28">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar_video_player"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#CC000000"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/back_video_player"
            app:srcCompat="@drawable/ic_baseline_arrow_back_32"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dp"
            android:layout_marginLeft="@dimen/material_generic"
            android:layout_marginStart="@dimen/material_generic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/overflow_video_player"
            app:srcCompat="@drawable/ic_baseline_more_vert_32"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dp"
            android:layout_marginEnd="@dimen/material_generic"
            android:layout_marginRight="@dimen/material_generic"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/fit_to_screen_video_player"
            app:srcCompat="@drawable/ic_outline_fit_screen_32"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dp"
            app:layout_constraintRight_toLeftOf="@id/overflow_video_player"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/material_generic"
            android:layout_marginRight="@dimen/material_generic"
            />
        <ImageView
            android:id="@+id/orientation_video_player"
            app:srcCompat="@drawable/ic_baseline_fullscreen_32"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dp"
            app:layout_constraintRight_toLeftOf="@id/fit_to_screen_video_player"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/material_generic"
            android:layout_marginRight="@dimen/material_generic"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layoutDirection="ltr"
        android:background="#CC000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="4dp"
            android:orientation="horizontal">
            <ImageButton android:id="@id/exo_prev"
                style="@style/ExoMediaButton.Previous"/>
            <ImageButton android:id="@id/exo_rew"
                style="@style/ExoMediaButton.Rewind"
                app:srcCompat="@drawable/ic_outline_fast_rewind_32"
                />
            <ImageButton android:id="@id/exo_repeat_toggle"
                style="@style/ExoMediaButton"/>
            <ImageButton android:id="@id/exo_play"
                style="@style/ExoMediaButton.Play"
                app:srcCompat="@drawable/ic_baseline_play_circle_outline_32"
                />
            <ImageButton android:id="@id/exo_pause"
                style="@style/ExoMediaButton.Pause"
                app:srcCompat="@drawable/ic_baseline_pause_circle_outline_32"
                />
            <ImageButton android:id="@id/exo_ffwd"
                style="@style/ExoMediaButton.FastForward"
                app:srcCompat="@drawable/ic_outline_fast_forward_32"
                />
            <ImageButton android:id="@id/exo_next"
                style="@style/ExoMediaButton.Next"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView android:id="@id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:includeFontPadding="false"
                android:textColor="#FFBEBEBE"/>
            <View android:id="@id/exo_progress_placeholder"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="26dp"/>
            <TextView android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:includeFontPadding="false"
                android:textColor="#FFBEBEBE"/>
            <FrameLayout
                android:id="@+id/exo_fullscreen_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="right">
                <ImageView
                    android:id="@+id/exo_fullscreen_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_baseline_open_in_new_24"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>