<?xml version="1.0" encoding="utf-8"?>
<com.amaze.fileutilities.utilis.CustomCoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="@dimen/material_sheet_peek_height"
        android:minHeight="@dimen/material_sheet_peek_height"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/imageViewSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        tools:src="@tools:sample/backgrounds/scenic"
        />
    <include
        android:id="@+id/custom_toolbar"
        layout="@layout/custom_toolbar"
        android:visibility="gone"
        />
    <RelativeLayout
        android:id="@+id/layoutBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_curved_audio_sheet"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/eight_dp"
        android:paddingRight="@dimen/eight_dp"
        android:paddingBottom="@dimen/eight_dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/image_viewer_peek_height"
        app:layout_behavior="com.amaze.fileutilities.utilis.DragDismissBottomSheetBehaviour"
        android:visibility="gone"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/eight_dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            >
            <LinearLayout
                android:id="@+id/bottomSheetBig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <com.amaze.fileutilities.home_page.CustomBottomBarView
                    android:id="@+id/custom_bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:bottomBarBgColor="@android:color/transparent"
                    />
                <include
                    android:id="@+id/image_metadata_layout"
                    layout="@layout/fragment_image_viewer_metadata"
                    />
                <TextView
                    android:id="@+id/metadata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</com.amaze.fileutilities.utilis.CustomCoordinatorLayout>