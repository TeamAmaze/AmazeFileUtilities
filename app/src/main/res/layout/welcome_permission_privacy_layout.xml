<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/material_generic"
    android:paddingTop="@dimen/material_generic_large">
    <TextView
        android:id="@+id/before_we_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/before_we_start"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/twenty_four_sp"
        />
    <ScrollView
        android:id="@+id/conditions_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/before_we_start_text"
        android:layout_above="@id/bottom_view"
        android:layout_marginTop="@dimen/material_generic_medium"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- storage -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/permission_image"
                    android:layout_width="@dimen/material_generic_medium"
                    android:layout_height="@dimen/material_generic_medium"
                    android:src="@drawable/ic_outline_info_32"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/material_generic"
                    android:text="@string/grant_permission"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteen_sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_permission"
                android:layout_marginTop="@dimen/material_generic"
                android:textColor="@color/white"
                android:textSize="@dimen/fourteen_sp"
                />
            <Button
                android:id="@+id/grantStorageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/material_generic"
                app:backgroundTint="@color/white"
                android:textColor="@color/navy_blue"
                android:layout_marginTop="@dimen/material_generic"
                android:text="@string/grant"
                />

            <!-- remove battery optimization -->
            <LinearLayout
                android:id="@+id/removeOptimizationsParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/material_generic_large"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/material_generic_medium"
                        android:layout_height="@dimen/material_generic_medium"
                        android:src="@drawable/ic_round_battery_full_24"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/material_generic"
                        android:text="@string/remove_battery_optimizations"
                        android:textColor="@color/white"
                        android:textSize="@dimen/eighteen_sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remove_battery_optimizations_hint"
                    android:layout_marginTop="@dimen/material_generic"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fourteen_sp"
                    />
                <Button
                    android:id="@+id/removeOptimizationsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius="@dimen/material_generic"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/navy_blue"
                    android:layout_marginTop="@dimen/material_generic"
                    android:text="@string/open"
                    />
            </LinearLayout>

            <!-- privacy -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/material_generic_large"
                >
                <ImageView
                    android:layout_width="@dimen/material_generic_medium"
                    android:layout_height="@dimen/material_generic_medium"
                    android:src="@drawable/ic_round_privacy_tip_32"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/material_generic"
                    android:text="@string/privacy_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteen_sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_summary"
                android:layout_marginTop="@dimen/material_generic"
                android:textColor="@color/white"
                android:textSize="@dimen/fourteen_sp"
                />
            <Button
                android:id="@+id/privacyPolicyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/material_generic"
                app:backgroundTint="@color/white"
                android:textColor="@color/navy_blue"
                android:layout_marginTop="@dimen/material_generic"
                android:text="@string/privacy_policy"
                />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_generic"
        android:layout_alignParentBottom="true"
        >
        <CheckBox
            android:id="@+id/license_agreement_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/license_agreement_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/license_agreement"
            android:layout_marginLeft="@dimen/eight_dp"
            android:textColor="@color/white"
            android:textSize="@dimen/eighteen_sp"
            android:layout_toRightOf="@id/license_agreement_checkbox"
            android:layout_toLeftOf="@id/doneButton"
            />
        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="@dimen/material_generic"
            app:backgroundTint="@color/highlight_yellow"
            android:textColor="@color/navy_blue"
            android:text="@string/done"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
</RelativeLayout>