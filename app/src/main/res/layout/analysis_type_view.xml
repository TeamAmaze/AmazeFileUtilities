<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <HorizontalScrollView
        android:id="@+id/images_list_scroll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/grid_view"
        android:layout_marginBottom="@dimen/material_generic"
        android:scrollbars="none"
        android:visibility="gone"
        >
        <LinearLayout
            android:id="@+id/images_list_parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_view"
            android:orientation="horizontal"
            >
            <ProgressBar
                android:id="@+id/scroll_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/grid_view"
                android:indeterminate="true"
                />
            <!-- placeholder for dynamic elements -->
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/title_parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginBottom="@dimen/eight_dp"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_four_sp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/title_hint"
            android:layout_width="@dimen/material_generic"
            android:layout_height="@dimen/material_generic"
            android:src="@drawable/ic_outline_info_32"
            android:layout_marginLeft="@dimen/eight_dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/clean_button_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/clean_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clean"
            android:textColor="@color/navy_blue"
            android:layout_centerHorizontal="true"
            app:backgroundTint="@color/highlight_yellow"
            app:cornerRadius="@dimen/material_generic" />
        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            />
    </RelativeLayout>
</merge>