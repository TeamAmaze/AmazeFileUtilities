<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.amaze.fileutilities">

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AmazeApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AmazeFileUtilities"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:banner="@drawable/about_header"
        android:requestLegacyExternalStorage="true"
        >
        <activity android:name=".LandingActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Dialog"
            android:exported="true">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".image_viewer.ImageViewerDialogActivity"
            android:label="@string/image_viewer"
            android:theme="@style/Theme.AppCompat.Dialog"
            android:exported="true">
            <intent-filter android:label="@string/intent_image_viewer" tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />
                <data android:mimeType="image/*" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.OPENABLE" />
            </intent-filter>
        </activity>

        <activity android:name=".image_viewer.ImageViewerActivity"
            android:label="@string/image_viewer" android:theme="@style/Theme.AppCompat" />
    </application>
</manifest>